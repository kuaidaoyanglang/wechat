//
// Mixins
// --------------------------------------------------

@import "./variables"

size()
  if length(arguments) == 1
    width: arguments[0]
    height: arguments[0]
  else
    width: arguments[0]
    height: arguments[1]

border-1px($pos = 'bottom')
  position: relative
  &::after
    content: ''
    absolute: left 0 $pos 0 right 0
    border-top: 1px solid $color-border
    transform: scaleY(0.5)

no-wrap()
  text-overflow: ellipsis
  overflow: hidden
  white-space: nowrap

-pos(type, args)
  i = 0
  position: unquote(type)
  for j in (1..4)
    if length(args) > i
      {args[i]}: args[i + 1] is a 'unit' ? args[i += 1] : 0
    i += 1

fixed()
  -pos('fixed', arguments)

absolute()
  -pos('absolute', arguments)

relative()
  -pos('relative', arguments)
